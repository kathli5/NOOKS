<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <title>Nooks</title>
    <%- include("partials/imports.ejs") %>
</head>

<body>
    <%- include("partials/navbar.ejs") %>
        <section class="pagebody container">
            <h1><%= listDescription %>
            <br><br>
            </h1>
            <div class="row ">
                <% list.forEach( (elt)=> {%>
                    <div class="col mb-5">
                        <div class="card" style="width:20em;">
                            <!--if there is no photo upload a preset blank-->
                            <% if (elt.photos.length===0) { %>
                                <img class="card-img-top nookThumb" src="https://ralfvanveen.com/wp-content/uploads/2021/06/Placeholder-_-Glossary.svg" alt="No image available">
                                <%} else {%>
                                    <img class="card-img-top nookThumb" src="<%=elt.photos[0]%>" alt="<%=elt.name%>">
                                    <% } %>
                                        <div class="card-body">
                                            <h5 class="card-text">
                                                <a href="<%='/nook/'+elt.nid %>""><%= elt.name %></a></h5>
                                </div>
                            
                            <div class=" card-footer text-end">
                                                   <span class="numlikes"><%=elt.likes%></span>
                                                        <button aria-label="likeButton" class="likebutton <%=elt.nid%>" type="button">
                                                            <% if (!(parseInt(elt.nid) in likes)) { %>
                                                            <svg xmlns="http://www.w3.org/2000/svg" width="16"
                                                                height="16" fill="currentColor" class="bi bi-heart"
                                                                viewBox="0 0 16 16">
                                                                <path
                                                                    d="m8 2.748-.717-.737C5.6.281 2.514.878 1.4 3.053c-.523 1.023-.641 2.5.314 4.385.92 1.815 2.834 3.989 6.286 6.357 3.452-2.368 5.365-4.542 6.286-6.357.955-1.886.838-3.362.314-4.385C13.486.878 10.4.28 8.717 2.01zM8 15C-7.333 4.868 3.279-3.04 7.824 1.143q.09.083.176.171a3 3 0 0 1 .176-.17C12.72-3.042 23.333 4.867 8 15" />
                                                            </svg>
                                                            <% } else { %>
                                                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-heart-fill" viewBox="0 0 16 16">
                                                                    <path fill-rule="evenodd" d="M8 1.314C12.438-3.248 23.534 4.735 8 15-7.534 4.736 3.562-3.248 8 1.314"/>
                                                                  </svg>
                                                                  <% } %>
                                                        </button>
                                
                                        </div>
                        </div>

                        
                     </div> 
                     <% }); %>

        </section>

</body>

</html>