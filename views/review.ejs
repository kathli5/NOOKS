<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <title>Node Starter</title>
  <!-- load local stylesheet (css) -->
  <link rel="stylesheet" href="/styles.css" />
  <!-- loading jquery -->
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
</head>

<body>
  <%- include("partials/navbar.ejs") %>
    <%- include("partials/flashes.ejs") %>

      <h1>Add Review for <%= nook.name %>
      </h1>

      <form class="example" id="review_form" method="POST" action="/review/<%= nook.nid %>">
        <fieldset>
          <legend>Tags</legend>

          <div>
            <input type="checkbox" id="wifi" name="wifi" value="wifi" />
            <label for="wifi">Free Wifi</label>
          </div>
          <div>
            <input type="checkbox" id="food" name="food" value="food" />
            <label for="food">Food Availability</label>
          </div>
          <div>
            <input type="checkbox" id="outlets" name="outlets" value="outlets" />
            <label for="outlets">Outlets</label>
          </div>

          <div>
            <p>Noise Level</p>
            <input type="radio" id="quiet" name="noise" value="quiet">
            <label for="quiet">Usually Quiet</label><br>
            <input type="radio" id="loud" name="noise" value="loud">
            <label for="loud">Potentially Loud</label><br>
          </div>
        </fieldset>

        <fieldset>
          <legend>Add Review</legend>
          <input type="text" id="text" name="text" required minlength="2" size="60" />

        </fieldset>

        <fieldset>
          <legend>Pictures</legend>
        </fieldset>

        <p><button type="submit">Submit</button></p>
      </form>

      <!-- load local js -->
      <script src="/main.js"></script>
</body>

</html>